<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/rv_disorder_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_location_searching_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rv_disorder_desordem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".45"
            app:layout_constraintLeft_toRightOf="@id/rv_disorder_image"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/dosis"
            android:textFontWeight="400"
            android:ellipsize="none"
            android:maxLines="2"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="Ola"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/rv_disorder_descricao"
            app:layout_constraintWidth_percent=".45"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:fontFamily="@font/dosis"
            app:layout_constraintLeft_toLeftOf="@id/rv_disorder_desordem"
            app:layout_constraintTop_toBottomOf="@id/rv_disorder_desordem"
            android:layout_marginTop="10px"
            android:ellipsize="none"
            android:maxLines="3"
            android:scrollHorizontally="false"
            android:text="testo muito muito grande como faz pra ajustar na tela"/>

        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/rv_disorder_status"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:layout_constraintLeft_toLeftOf="@id/rv_disorder_desordem"-->
            <!--app:layout_constraintTop_toBottomOf="@id/rv_disorder_descricao"-->
            <!--android:layout_marginTop="10px"-->
            <!--android:text="Ola"/>-->

        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/rv_disorder_local"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:layout_constraintLeft_toLeftOf="@id/rv_disorder_desordem"-->
            <!--app:layout_constraintTop_toBottomOf="@id/rv_disorder_status"-->
            <!--android:layout_marginTop="10px"-->
            <!--android:text="Ola"/>-->

        <ImageButton
            android:id="@+id/rv_disorder_validar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rv_disorder_invalidar"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/input_border"
            android:src="@drawable/ic_thumb_up_black_24dp"/>

        <ImageButton
            android:id="@+id/rv_disorder_invalidar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/input_border"
            android:src="@drawable/ic_thumb_down_black_24dp"/>

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>