      Tipos de desordem
    </a>
    <br>
    <% if (sess.tipo == 1){ %>
      <div class="item" id="gestao">
        
        <div class="header">Gestor</div>
        <div class="menu">
          
          <a class="item" href="/gestor" >Acesso ao painel do Gestor</a>
        </div>
      </div>
    <% } %>
  <% } %>
