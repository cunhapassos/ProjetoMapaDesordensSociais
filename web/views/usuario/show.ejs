
    <%- include ../templates/sidenav.ejs %>
    <% var found = 0; %>
    <div class="ui pusher">
        <% fotos.forEach(function (foto){ %>
            <% if(foto.fot_idusuario == usuario.usu_idusuario){ %>
                <% found = 1; %>
                <h2 class="ui header">
                    <img src="/../images/usuarios/<%= foto.fot_idusuario %>.jpg" class="ui image">
                    Usuário nº: <%= usuario.usu_idusuario %>
                </h2>
            <% } %>
        <% }) %>
        <%  if(found == 0){%>
            <h2 class="ui header">
                <img src="/../images/usuarios/no-image.png" class="ui image">
                Usuário nº: <%= usuario.usu_idusuario %>
            </h2>
        <% } %>
        <!-- <h1 class="ui dividing header">Usuário nº <%= usuario.usu_idusuario %></h1> -->
