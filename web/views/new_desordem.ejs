<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="../css/materialize.css">
    <link rel="stylesheet" type="text/css" href="../css/admin.css">
    <link rel="stylesheet" type="text/css" href="../css/desordem.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
       <ul id="slide-out" class="sidenav sidenav-fixed">
      <li><a href="#!">Denuncias</a></li>
      <li><a href="/admin">Mapa</a></li>
      <li class="no-padding">
        <ul class="collapsible collapsible-accordion">
          <li>
            <a class="collapsible-header"><i class="material-icons">arrow_drop_down</i>Desordem</a>
            <div class="collapsible-body">
              <ul>
                <li><a href="/desordem/new">Criar desordem</a></li>
                <li><a href="#!">Alterar desordem</a></li>
                <li><a href="#!">Apagar desordem</a></li>
              </ul>
            </div>
          </li>
        </ul>
      </li>
    </ul>

 <div class="row" id="fora_sidenav" style="margin-bottom: 0;">
    <form class="col s12" method="post" action="/desordem/create">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="id" name="id" type="text" class="validate">
          <label for="first_name">ID</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="tipo" name="tipo" type="text" class="validate">
          <label for="first_name">Tipo</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="natureza" name="natureza" type="text" class="validate">
          <label for="first_name">Natureza</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <textarea  placeholder="descrição" name="descricao" type="text"  class="materialize-textarea"></textarea>
          <label for="first_name">Descrição</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
        <select name="orgao">
          <option value="" disabled selected>Qual órgao</option>
          <% if(orgaos){ 
              for(var i = 0; i < orgaos.length; i++){%>
                  <option value=<%= orgaos[i].org_idorgao %> ><%= orgaos[i].org_nome %></option>
              <% }} %>
        </select>
        <label>Orgão</label>
      </div>
    </div>

      <div class="row">
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
    
    <script src="../js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="../js/materialize.js"></script>
    <script type="text/javascript">
    // SIDEBAR
      document.addEventListener('DOMContentLoaded', function() {
      var elems = document.querySelectorAll('.sidenav');
      var instances = M.Sidenav.init(elems, options);
      });

      $(document).ready(function(){
      $('.sidenav').sidenav();
      });

       document.addEventListener('DOMContentLoaded', function() {
          var elems = document.querySelectorAll('.collapsible');
          var instances = M.Collapsible.init(elems, options);
        });

        // Or with jQuery

        $(document).ready(function(){
          $('.collapsible').collapsible();
        });

        $(document).ready(function(){
          $('select').formSelect();
        });
      
    </script>
    <script type="text/javascript">
      if (failed == 1) {
        alert("Erro ao inserir na base de dados");
      }
    </script>
  </body>
</html>
