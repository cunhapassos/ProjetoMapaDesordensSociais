<!DOCTYPE html>
<html>
<head>
	<title>Tipos de Desordem</title>
	<link rel="stylesheet" href="../css/materialize.css">
    <link rel="stylesheet" type="text/css" href="../css/admin.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../css/style.css">
</head>
<body>
	<%- include ../templates/sidenav.ejs %>	
	
	<main>
		<h3>Tipos</h3>
		<hr>
		<form method="post" action="/tipos/delete">
			<table >

			    <thead>
			      <tr>
			          <th>Id</th>
					  <th>Nome</th>
			          <th>Descrição</th>
					  <th></th>
			      </tr>
			    </thead>

			    <tbody>
				<% for(var i = 0; i < tipos.length; i++) { %>
			    
			      <tr>
			    	<td><%= tipos[i].tde_idtipo_desordem%></td>
                    <td><%= tipos[i].tde_nome %></td>
                    <td><%= tipos[i].tde_descricao %></td>

			    	<td><button name="id_tipo" type="submit" value=<%= tipos[i].tde_idtipo_desordem %> class="btn-flat"><i class="clear small material-icons">clear</i></button><a name="id_usuario" href="/tipos/<%= tipos[i].tde_idtipo_desordem %>/edit" class="btn-flat"><i class="edit small material-icons">edit</i></a></td>
			      </tr>

			    <% } %>
			    </tbody>
			</table>
			
		</form>

		<a class="btn-floating btn-large waves-effect waves-light red add" href="/tipos/new"><i class="material-icons">add</i></a>
	</main>
	<script src="../js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="../js/materialize.js"></script>
    <script type="text/javascript" src="../js/init_dom.js"></script>
</body>
</html>