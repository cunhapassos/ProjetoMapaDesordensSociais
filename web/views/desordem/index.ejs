<!DOCTYPE html>
<html>
<head>
	<title>Desordens</title>
	<link rel="stylesheet" href="../css/materialize.css">
    <link rel="stylesheet" type="text/css" href="../css/admin.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="../css/style.css">
</head>
<body>
<%- include ../templates/sidenav.ejs %>	<main>
		<form method="post" action="/desordem/delete">
			<table >

			    <thead>
			      <tr>
			          <th>Tipo</th>
			          <th>Natureza</th>
			          <th>Descrição</th>
			          <th>orgao</th>
			          <th></th>
			      </tr>
			    </thead>

			    <tbody>
				<% for(var i = 0; i < desordens.length; i++) {%>
			    
			      <tr>
			        <td><%= desordens[i].des_tipo %></td>
			        <td><%= desordens[i].des_natureza %></td>
			        <td><%= desordens[i].des_descricao %></td>
			    	<td><%= desordens[i].org_idorgao%></td>
			    	<td><button name="id_desordem" type="submit" value=<%= desordens[i].des_iddesordem %> class="btn-flat"><i class="clear small material-icons">clear</i></button><a name="id_desordem" href="/desordens/<%= desordens[i].des_iddesordem %>/edit" class="btn-flat"><i class="edit small material-icons">edit</i></a></td>
			      </tr>

			    <% } %>
			    </tbody>
			</table>
			
		</form>
	</main>
	<script src="../js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="../js/materialize.js"></script>
    <script type="text/javascript" src="../js/init_dom.js"></script>
</body>
</html>